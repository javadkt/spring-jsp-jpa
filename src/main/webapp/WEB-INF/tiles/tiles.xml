<tiles-definitions>

    <definition name="baseLayout" template="/WEB-INF/layout/layout.jsp">
        <put-attribute name="title" value="EmployeeApp"/>
        <put-attribute name="header" value="/WEB-INF/layout/header.jsp"/>
        <put-attribute name="footer" value="/WEB-INF/layout/footer.jsp"/>
    </definition>

    <definition name="home" extends="baseLayout">
        <put-attribute name="body" value="/WEB-INF/views/home.jsp"/>
    </definition>

    <definition name="addEmployee" extends="baseLayout">
        <put-attribute name="body" value="/WEB-INF/views/add-employee.jsp"/>
    </definition>

    <definition name="editEmployee" extends="baseLayout">
        <put-attribute name="body" value="/WEB-INF/views/edit-employee.jsp"/>
    </definition>

    <definition name="employeeList" extends="baseLayout">
        <put-attribute name="body" value="/WEB-INF/views/employee-list.jsp"/>
    </definition>


